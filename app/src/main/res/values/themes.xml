<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Ruine" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="android:windowSplashScreenAnimationDuration">1</item>
    </style>

    <style name="Theme.Ruine" parent="Base.Theme.Ruine" />
    <style name="TEXT">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="background">
        <item name="android:background">@color/white</item>
    </style>
    <style name="bottomnavbar">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/bottom_nav_color_light</item>
        <item name="itemTextColor">@color/bottom_nav_color_light</item>
    </style>
    <style name="iconTint">
        <item name="iconTint">@color/black</item>
        <item name="backgroundTint">@color/white</item>
    </style>
</resources>